#include<stdio.h>
#include<stdbool.h>




void left(int userCord[]){ //moves left
    userCord[0]--;
    return;
}
void right(int userCord[]){ //moves right
    userCord[0]++;
    return;
}
void down(int userCord[]){//moves down
    userCord[1]++;
    return;
}
void up(int userCord[]){ //moves up
    userCord[1]--;
    return;
}
void move(userInput, userCord){
    switch(userInput){
        case 'a':
            left(userCord);
            break;
        case 'w':
            up(userCord);
            break;
        case 's':
            down(userCord);
            break;
        case 'd':
            right(userCord);
            break;
    }
    return;
}


void displayBoard(int SIZEX, int SIZEY, char GAMEBOARD[SIZEX][SIZEY]){
for(int i = 0; i<SIZEX; i++){
for(int j = 0; j<SIZEY; j++){
printf("%2c", GAMEBOARD[i][j]);}
printf("\n");
}}






int main(){
const int SIZEX = 19;
const int SIZEY = 21;
char GAMEBOARD[19][21];
int userDir = 0; // used to update DISPLAYUSER.
const char DISPLAYUSER[4] = {'>', '<', '^', 'v'}; //displays what direction the user is facing
int userCord[2] = {10, 13};
bool run;
char userInput;
while(run){
    displayBoard(SIZEX, SIZEY,GAMEBOARD);







}


}
